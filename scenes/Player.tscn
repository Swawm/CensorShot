script/source = "extends KinematicBody2D 


var ACCELERATION = 200
var MAX_SPEED = 50
const FRICTION = 0.25
const GRAVITY = 1000
const AIR_RESISTANCE = 0.02
const JUMP_FORCE = 250
var sprint = 100


onready var body = $Body
onready var hands = $Hands
onready var animation = $Animation

var motion = Vector2.ZERO

func _physics_process(delta):
	var x_input = Input.get_action_strength(\"ui_right\") - Input.get_action_strength(\"ui_left\")
	
	
	if x_input !=0:
		if Input.is_action_pressed(\"ui_run\"):
			animation.play(\"Run_fast\")
			var ACCELERATION = 300
			var MAX_SPEED = 100
			motion.x += x_input * ACCELERATION * delta
			motion.x = clamp(motion.x, -MAX_SPEED, MAX_SPEED)
		else:
			animation.play(\"Run\")
			motion.x += x_input * ACCELERATION * delta
			motion.x = clamp(motion.x, -MAX_SPEED, MAX_SPEED)

		body.flip_h = x_input < 0
		hands.flip_h = x_input < 0
		
		
		if body.flip_h == true:
			#hands.rotation_degrees = clamp(hands.rotation_degrees, -90, 45)
			hands.offset = Vector2(-4, 3)
			hands.position = Vector2(3, -2)
			$Hands/Flame.position.x = -9.543 # Vector2(-7.543, 2.433)
			#hands.offset = Vector2(-4, 3)
		else:
			hands.flip_v = false
			hands.rotation_degrees = clamp(hands.rotation_degrees, -90, 45)
			hands.rotation_degrees = 0
			hands.offset = Vector2(4, 3)
			hands.position = Vector2(-3, -2)
			$Hands/Flame.position = Vector2(9.421, 2.459)
			
			
	else: 
		animation.play(\"Idle\")
		 

	motion.y += GRAVITY * delta

	if is_on_floor():
		if x_input == 0 :
			motion.x = lerp(motion.x, 0, FRICTION)
		if Input.is_action_just_pressed(\"ui_jump\"):
			motion.y = -JUMP_FORCE
			get_node(\"jump\").play() 
	else: 
		animation.play(\"Jump\")
# warning-ignore:integer_division
		if Input.is_action_just_released(\"ui_jump\") and motion.y < -JUMP_FORCE/2:
# warning-ignore:integer_division
			motion.y = -JUMP_FORCE/2
			
		if x_input == 0:
			motion.x = lerp(motion.x, 0, AIR_RESISTANCE)
			
	if Input.is_action_just_pressed(\"ui_shoot\"):
		get_node(\"walk\").play()
	
	
	motion = move_and_slide(motion, Vector2.UP)
	if Input.is_mouse_button_pressed(2):
		print(hands.rotation_degrees)
		hands.look_at(get_global_mouse_position())
		if hands.flip_h == true:
			hands.rotation_degrees = hands.rotation_degrees - 180
	else:
		hands.rotation_degrees = 0
		
	if Input.is_mouse_button_pressed(1):
		$Hands/Flame/Particles2D.emitting = true
	else:
		$Hands/Flame/Particles2D.emitting = false
"

